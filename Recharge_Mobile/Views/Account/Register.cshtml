
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title-->
<div class="page-title d-flex" aria-label="Page title" style="background-image: Url(~/Content/img/page-title/shop-pattern.jpg);">
    <div class="container text-left align-self-center">
        <h1 class="page-title-heading">Register Account</h1>
    </div>
</div>
<!-- Page Content-->
<div class="container mb-3">
    <div class="row">
        <div class="col-md-6 pb-5" style="margin: auto;">
            @using (Html.BeginForm("Register", "Account", new { @class = "needs-validation wizard" }))
            {
                <div class="wizard-body pt-2">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-fn">First Name</label><span style="color: red;font-size:12px;  margin-left:3px; font-weight: bold">*</span>
                                <input class="form-control input-val" type="text" name="firstname"
                                       placeholder="First Name"
                                       title="Firstname must have only words and space, at least 3  characters, at max 40 characters."
                                       pattern="[a-zA-Z\s]{3,40}" maxlength="40" required id="reg-fn">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-un">Last Name</label><span style="color: red;font-size:12px;  margin-left:3px; font-weight: bold">*</span>
                                <input class="form-control input-val" type="text" name="lastname" placeholder="Last Name"
                                       title="Lastname must have only words and space, at least 3  characters, at max 40 characters."
                                       maxlength="128" required
                                       id="reg-un">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-phone">Phone Number</label><span style="color: red;font-size:12px;  margin-left:3px; font-weight: bold">*</span>
                                <input class="form-control input-val" type="tel" name="phonenumber" placeholder="Phome Number"
                                       title="Phone number must have only digits, at 10 digits."
                                       pattern="^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$" maxlength="10" required id="reg-phone">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-un">Email</label><span style="color: red;font-size:12px;  margin-left:3px; font-weight: bold">*</span>
                                <input class="form-control input-val" type="email" name="email"
                                       placeholder="Email" required id="reg-un">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-password">Password</label><span style="color: red;font-size:12px;  margin-left:3px; font-weight: bold">*</span>
                                <input class="form-control input-val" type="password" name="password"
                                       placeholder="Password"
                                       title="Password must have at least 8 characters, including characters and digits, at least one uppercase words, one number and total at max 20 characters."
                                       required id="reg-password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,20}"
                                       maxlength="20">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-password-confirm">Confirm Password</label><span style="color: red;font-size:12px;  margin-left:3px; font-weight: bold">*</span>
                                <input class="form-control input-val" type="password" name="repassword"
                                       placeholder="Confirm Password"
                                       title="Password must have at least 8 characters, including characters and digits, at least one uppercase words, one number and total at max 20 characters."
                                       pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,20}" maxlength="20" required
                                       id="reg-password-confirm">
                                <span class="text-danger">@TempData["invalid-password"]</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group" style="color: red;">
                                <p>* Required</p>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary" type="submit">Register</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



