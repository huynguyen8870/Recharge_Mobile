@model Recharge_Mobile.Areas.User.Models.Views.CustomerRechargeModelView
@{
    ViewBag.Title = "AccountDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title-->
<div class="page-title d-flex" aria-label="Page title" style="background-image: @Url.Content("../Content/img/page-title/shop-pattern.jpg"); ">
    <div class="container text-left align-self-center">
        <h1 class="page-title-heading">Profile Settings</h1>
    </div>
</div>
<!-- Page Content-->
<div class="container mb-4">
    <div class="row">
        <div class="col-lg-4 pb-5">
            <!-- Account Sidebar-->
            <div class="author-card pb-3">
                <div class="author-card-profile">
                    <div class="author-card-avatar">
                        <img src="~/Content/img/account/user-ava.jpg" alt="Daniel Adams" />
                    </div>
                    <div class="author-card-details">
                        <h5 class="author-card-name text-lg"></h5>
                        <span class="author-card-position">Time Remain: @Model.TimeRemain </span>
                        <span class="author-card-position">Debit Amount: $@Model.DebitAmount </span>
                    </div>
                </div>
            </div>
            <div class="wizard">
                <nav class="list-group list-group-flush">
                    <a class="list-group-item active" href="account-profile.html"><i class="fe-icon-user text-muted"></i>Profile</a>
                    <a class="list-group-item" href="account-orders.html">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Transaction List</div>
                            </div>
                        </div>
                    </a>
                    <a class="list-group-item" href="account-profile.html"><i class="fe-icon-user text-muted"></i>Profile Settings</a>
                    <a class="list-group-item" href="account-wishlist.html">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-tag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Debit</div>
                            </div>
                        </div>
                    </a>

                </nav>
            </div>
        </div>
        <!-- Profile Settings-->
        <div class="col-lg-8 pb-5">
            <form class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="account-fn">Phone Number: @Model.PhoneNumber </label>
                    </div>
                </div>
                @{ TimeSpan timeRemain = TimeSpan.FromSeconds(Model.TimeRemain); }
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="account-ln">Time Remain: @timeRemain.ToString(@"hh\:mm\:ss")</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="account-email">Expire: @Model.EndTime</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="account-email">Special Recharge: @Model.EndTime</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <hr class="mt-2 mb-3">
                    <div class="form-group">
                        <label for="account-phone">Debit Amount: $ @Model.DebitAmount</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="account-phone">Expire: @Model.TimeToPay </label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

