@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title-->
<div class="page-title d-flex" aria-label="Page title" style="background-image: @Url.Content("../Content/img/page-title/shop-pattern.jpg"); ">
    <div class="container text-left align-self-center">
        <h1 class="page-title-heading">Change Password</h1>
    </div>
</div>
<!-- Page Content-->
<div class="container mb-4">
    <div class="row">
        <div class="col-lg-4 pb-5">
            <!-- Account Sidebar-->
            <div class="author-card pb-3">
                <div class="author-card-profile">
                    <div class="author-card-avatar">
                        <img src="~/Content/img/account/user-ava.jpg" alt="Daniel Adams" />
                    </div>
                    <div class="author-card-details">
                        <h5 class="author-card-name text-lg">@*@Model.FirstName @Model.LastName*@</h5>
                        <span class="author-card-position">Time Remain: </span>
                        <span class="author-card-position">Debit Amount: </span>
                    </div>
                </div>
            </div>
            <div class="wizard">
                <nav class="list-group list-group-flush">
                    <a class="list-group-item" href="@Url.Action("AccountDetail","User")"><i class="fe-icon-user text-muted"></i>Profile</a>
                    <a class="list-group-item" href="@Url.Action("TransactionList","User")">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Transaction List</div>
                            </div>
                        </div>
                    </a>
                    <a class="list-group-item active" href="@Url.Action("AccountSetting","User")"><i class="fe-icon-user text-muted"></i>Profile Settings</a>
                    <a class="list-group-item" href="@Url.Action("AccountDebit","User")">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-tag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Debit Transaction</div>
                            </div>
                        </div>
                    </a>
                </nav>
            </div>
        </div>
        <!-- Profile Settings-->
        <div class="col-lg-8 pb-5">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <form class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="account-pass">Old Password</label>
                            <input class="form-control" type="password" id="account-pass" name="old-password">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="account-pass">New Password</label>
                            <input class="form-control" type="password" id="account-pass" name="new-password">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="account-confirm-pass">Confirm Password</label>
                            <input class="form-control" type="password" id="account-confirm-pass" name="comfirm-password">
                        </div>
                    </div>
                    <div class="col-12">
                        <hr class="mt-2 mb-3">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <button class="btn btn-primary" type="button" data-toast data-toast-position="topRight" data-toast-type="success" data-toast-icon="fe-icon-check-circle" data-toast-title="Success!" data-toast-message="Your profile updated successfuly.">Update Profile</button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

