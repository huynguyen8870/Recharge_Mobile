@model Recharge_Mobile.Areas.User.Models.Views.AccountModelView
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";
}

<!-- Profile Settings-->
<div class="col-lg-8 pb-5">
    @using (Html.BeginForm(new { @class = "row" }))
    {
        @*@Html.AntiForgeryToken()*@
        <div class="col-md-12">
            <div class="form-group">
                <label for="account-ln">Old Password</label>
                <input class="form-control" type="password" name="oldpassword" required>
                <span class="text-danger">@TempData["oldpassword"]</span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label for="account-email">New Password</label>
                <input class="form-control" type="password" name="newpassword" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" 
                       title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label for="account-email">Confirm Password</label>
                <input class="form-control" type="password" name="repassword" required />
                <span class="text-danger">@TempData["repassword"]</span>
            </div>
        </div>
        <div class="col-12">
            <hr class="mt-2 mb-3">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
                <span class="text-success">@TempData["success"]</span>
                <button class="btn btn-primary" type="submit">Update Password</button>
            </div>
        </div>
    }
</div>

