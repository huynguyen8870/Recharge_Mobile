@model IEnumerable<Recharge_Mobile.Areas.AdminArea.Models.AdminCustomerListVM>

@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Areas/AdminArea/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 style="color: purple; text-align: center">Customer List</h3>
<div class="container">
    <div class="row mb-3">
        <div class="col"></div>
        <div class="col">
            <div class="float-right">
                @using (Html.BeginForm("CustomerListByPhone", "AdminCustomer", new { area = "AdminArea" }))
                {
                    <input class="" type="text" id="searchNumber" name="searchNumber" placeholder="Search by phone" onchange="this.form.submit()">
                }
            </div>
        </div>
    </div>
</div>
<table class="table table-hover">
    <tr>
        <th style="display:none">id</th>
        <th>
            Phone Number
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Busy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Busy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Details", "CustomerDetails", new { id = item.CustomerId }) |
                @Html.ActionLink("Activate", "ActivateCustomer", new { id = item.CustomerId }) |
                @Html.ActionLink("Deactivate", "DeactivateCustomer", new { id = item.CustomerId })
            </td>
        </tr>
    }

</table>
