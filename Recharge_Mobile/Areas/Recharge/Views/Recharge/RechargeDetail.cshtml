                                <th>Description</th>
                                <th>Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in (IList<SRechargeModelView>)(ViewBag.SRList))
                            {
                                <tr>
                                    <td>
                                        <p class="product-title"><strong>@item.SRName</strong></p>
                                    </td>
                                    <td>
                                        @*@{ TimeSpan totalTime = TimeSpan.FromSeconds(@item.BaseTime); }
                                           @totalTime.ToString(@"hh\:mm\:ss")*@
                                        Duration: @item.Duration days
                                    </td>
                                    <td>
                                        <span class="product-price">
                                            $@item.Price
                                        </span>
                                    </td>
                                    <td>
                                        <a class="btn btn-style-4 btn-dark" href="@Url.Action("CheckoutPayment","Recharge", new { id = item.SRechargeId })">
                                            Subscribe
                                        </a>
                                    </td>
